<h1>Cocktails</h1>
<div class="container">
  <div class="cards">
    <% @cocktails.each do |c| %>
    <div class="card">
      <div class="card-body"  style= "background-image: asset-url('martini.jpg')">
        <div class="card-category">
          <%= link_to c.name, cocktail_path(c) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= link_to "Add a New Cocktail", new_cocktail_path, class: "btn btn-primary"%>
